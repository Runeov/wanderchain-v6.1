{
  "name": "wanderchain-v6.1",
  "private": true,
  "engines": {
    "node": ">=20.10.0"
  },
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "setup": "tsx packages/scripts/src/setup.ts",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r --if-present test",
    "tsc:check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*",
    "tests/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@types/pg": "^8.15.5"
  }
}
