generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id          String   @id @default(cuid())
  name        String
  countryCode String
  lat         Float
  lng         Float
  createdAt   DateTime @default(now())
  offers      Offer[]

  @@index([countryCode])
  @@index([lat, lng])
}

model Offer {
  id            String   @id @default(cuid())
  provider      String
  placeId       String
  priceMinor    Int
  currency      String
  availableFrom DateTime?
  availableTo   DateTime?
  createdAt     DateTime @default(now())
  place         Place    @relation(fields: [placeId], references: [id])

  @@index([provider])
  @@index([priceMinor])
  @@index([availableFrom, availableTo])
}